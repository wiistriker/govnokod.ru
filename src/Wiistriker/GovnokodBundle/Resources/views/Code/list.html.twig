{% extends 'WiistrikerGovnokodBundle::layout.html.twig' %}

{% block content %}
    <ol class="posts hatom">
{% for code in codes %}
        <li class="hentry">
            <h2><a rel="chapter" href="#">{{ code.category.title }}</a> / <a rel="bookmark" class="entry-title" href="{{ path('view_code', {id: code.id}) }}">Говнокод #{{ code.id }}</a></h2>
            <p class="vote">
                
            </p>
            <div class="entry-content">
                {{ code.text|nl2br }}
            </div>
            <p class="description">
                {{ code.description|nl2br }}
            </p>
            <p class="author">
                Запостил: <a href=""><img src="" alt="" class="avatar" /></a> <a href="">{{ code.user.username }}</a>,
                <abbr title="{{ code.created|date('c') }}">{{ code.created|date('d F Y') }}</abbr>
            </p>
